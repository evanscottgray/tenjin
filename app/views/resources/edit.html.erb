<h4>Edit Resource</h4>
<%=form_for [@course, @resource], url: course_resource_path(@course, @resource) do |f|%>
<div class="form-group">
  <%=f.label :name%>
  <%=f.text_field :name, class: "form-control md"%>
</div>
<div class="form-group">
  <%=f.label :type%>
  <%=f.text_field :type, class: "form-control md"%>
</div>
<% if @resource.type == 'Quiz' %>
<div class="form-group">
  <%=f.label :information%>
  <%=f.text_area :information, class: "form-control md"%>
</div>
<%end%>
<%=f.submit "Submit", class: "btn btn-default"%>
<%=link_to 'Back', course_resources_path(@course), class: "btn btn-default"%>
<%end%>
