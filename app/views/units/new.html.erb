<h4>New Unit</h4>
<%=form_for [@course, @unit], html: {multipart: true} do |f|%>
<div class="form-group">
	<%=f.label :number%>
	<%=f.number_field :number, class: "form-control md"%>
</div>
<div class="form-group">
	<%=f.file_field :audio %>
</div>
<%=f.submit "Submit", class: "btn btn-default"%>
<%=link_to 'Back', course_units_path(@course), class: "btn btn-default"%>
<%end%>
